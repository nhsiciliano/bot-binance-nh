# CONFIGURACIÓN PARA BOT DE FUTUROS ÚNICAMENTE
# ==============================================

# --- CONFIGURACIÓN PRINCIPAL ---
ENVIRONMENT=production
USE_TESTNET=False

# --- CREDENCIALES DE FUTUROS (PRINCIPALES) ---
# Estas son las credenciales que usará el bot
FUTURES_API_KEY=tu_futures_api_key_aqui
FUTURES_API_SECRET=tu_futures_api_secret_aqui

# --- CREDENCIALES DE FUTUROS TESTNET ---
# Para pruebas en testnet de futuros
FUTURES_TESTNET_API_KEY=tu_futures_testnet_api_key_aqui
FUTURES_TESTNET_API_SECRET=tu_futures_testnet_api_secret_aqui

# --- CONTROL DE MODO ---
# True = Testnet de futuros, False = Futuros real
USE_FUTURES_TESTNET=True

# --- BASE DE DATOS SUPABASE ---
SUPABASE_URL=tu_supabase_url_aqui
SUPABASE_KEY=tu_supabase_service_role_key_aqui

# --- NOTIFICACIONES TELEGRAM ---
TELEGRAM_TOKEN=tu_telegram_bot_token_aqui
TELEGRAM_CHAT_ID=tu_telegram_chat_id_aqui

